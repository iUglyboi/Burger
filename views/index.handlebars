<header>
    <div class="row">
        <div class="col-md-12">
            <h1 align="center">Eat Me!!!!</h1>
        </div>
    </div>
</header>

<div class="center">
    <div class="row">
        <div class="col-md-4">
            <h2 align="center">Uneaten Burgers</h2>
            <ul align="center">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <h2 align="center">Eaten Burgers</h2>
            <ul align="center">
                {{#each burgers}}
                {{#if devoured}}
                {{!-- {{burger_name}} --}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<br>
<br>
<div align="center" class="row">
    <div class="col-md-12">
        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="burger_name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>